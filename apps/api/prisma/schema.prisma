generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  LEAD
  ENGINEER
}

enum Team {
  SOFTWARE
  STRUCTURAL
  ELECTRICAL
  ENVIRONMENTAL
}

model User {
  id           String @id @default(uuid())
  username     String @unique
  passwordHash String
  role         Role
  team         Team?
  comments     Comment[]
}

model Project {
  id        String   @id @default(uuid())
  codeName  String   @unique
  client    String
  status    String
  scopes    Scope[]
  createdAt DateTime @default(now())
}

model Scope {
  id                     String    @id @default(uuid())
  team                   Team
  projectId              String
  project                Project   @relation(fields: [projectId], references: [id])
  tickets                Ticket[]
  comments               Comment[]
  allowCrossTeamComments Boolean   @default(false)
}

model Ticket {
  id             String @id @default(uuid())
  technicalSpecs String? @map("technical_specs")
  scopeId        String
  scope          Scope  @relation(fields: [scopeId], references: [id])
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  scopeId   String
  scope     Scope    @relation(fields: [scopeId], references: [id])
  createdAt DateTime @default(now())
}
